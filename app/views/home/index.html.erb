<div id="title" class="large-12 small-12 columns">
  <%= image_tag("inkdrop.png", size: "440x130") %>

  <h2>We're passionate about software development and we'd love to give everyone a taste of what we're capable of! <i>Ad mundum meliorem</i>.</h2>

  <div class="sign-up-label">
    <p>Join our mailing list for updates and early access<br>
    <strong>Psst! The first 100 people to join will get 50% off their subscription!</strong></p>
  </div>
</div>

<%= form_for @mail_contact, url: {action: "create_mail_contact"}, html: {data: {abide: ""}, class: "sign-up large-12 small-12 columns"} do |f| %>
  <div class="row">
    <div class="large-3 small-12 columns">
      <%= f.text_field :first_name, :placeholder => "* First name", required: "", class: field_class(@mail_contact, :first_name) %>
      <small class="error">First name is required and must be a string.</small>
    </div>
    <div class="large-3 small-12 columns">
      <%= f.text_field :last_name, :placeholder => "* Last name", required: "", class: field_class(@mail_contact, :last_name) %>
      <small class="error">Last name is required and must be a string.</small>
    </div>
    <div class="large-3 small-12 columns">
      <%= f.text_field :email, :placeholder => "* Email", class: field_class(@mail_contact, :email), required: "", pattern: "email" %>
      <small class="error">Email is required and must be a valid format.</small>
    </div>
    <div class="large-3 small-12 columns">
      <button type="submit" href="#">Ok, let's do this!</button>
    </div>
  </div>
<% end %>
